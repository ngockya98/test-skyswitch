<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Amasty\CompanyAccount\Block\Company\Profile\Create" name="amcompany_profile_create"
                   cacheable="false"
                   template="Amasty_CompanyAccount::company/profile/create.phtml"/>
        </referenceContainer>

        <referenceBlock name="amcompany-customer-account-tab-company-account">
            <arguments>
                <argument name="is_highlighted" xsi:type="boolean">true</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
