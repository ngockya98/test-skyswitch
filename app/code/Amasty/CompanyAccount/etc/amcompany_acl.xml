<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Amasty_CompanyAccount::index" title="All" translate="title" sortOrder="10">
                <resource id="Amasty_CompanyAccount::company" title="Company Account" translate="title" sortOrder="10">
                    <resource id="Amasty_CompanyAccount::view_account" title="View" translate="title" sortOrder="10">
                        <resource id="Amasty_CompanyAccount::edit_account" title="Edit" translate="title" sortOrder="10"/>
                    </resource>
                </resource>
                <resource id="Amasty_CompanyAccount::users" title="Users" translate="title" sortOrder="20">
                    <resource id="Amasty_CompanyAccount::users_view" title="View" translate="title" sortOrder="10">
                        <resource id="Amasty_CompanyAccount::users_add" title="Add" translate="title" sortOrder="10" />
                        <resource id="Amasty_CompanyAccount::users_edit" title="Edit" translate="title" sortOrder="20" />
                        <resource id="Amasty_CompanyAccount::users_delete" title="Delete" translate="title" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Amasty_CompanyAccount::roles" title="Roles" translate="title" sortOrder="30">
                    <resource id="Amasty_CompanyAccount::roles_view" title="View" translate="title" sortOrder="10">
                        <resource id="Amasty_CompanyAccount::roles_add" title="Add" translate="title" sortOrder="10" />
                        <resource id="Amasty_CompanyAccount::roles_edit" title="Edit" translate="title" sortOrder="20" />
                        <resource id="Amasty_CompanyAccount::roles_delete" title="Delete" translate="title" sortOrder="30" />
                    </resource>
                </resource>
                <resource id="Amasty_CompanyAccount::orders" title="Orders" translate="title" sortOrder="40">
                    <resource id="Amasty_CompanyAccount::orders_add" title="Place (Checkout)" translate="title" sortOrder="10">
                        <resource id="Amasty_CompanyAccount::use_credit" title="Use Company Store Credit" translate="title" sortOrder="20" />
                    </resource>
                    <resource id="Amasty_CompanyAccount::orders_view" title="View (own orders)" translate="title" sortOrder="20">
                        <resource id="Amasty_CompanyAccount::orders_all_view"
                                  title="View (orders of all Users)" translate="title" sortOrder="10" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
